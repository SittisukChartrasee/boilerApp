{
    "extends": [
      "airbnb",
      "plugin:flowtype/recommended",
      "plugin:jest/recommended"
    ],
    "rules": {
      "react/jsx-filename-extension": [ 1, { 
        "extensions": [".js", ".jsx"] 
      }],
      "react/forbid-prop-types": [2, { "forbid": [], "checkContextTypes": false, "checkChildContextTypes": false }],
      "jsx-a11y/anchor-has-content": [ 2, {
        "components": [ "Anchor" ]
      }],
      "semi":[2, "never"],
      "quotes": [2, "single"]
    },
    "parserOptions": {
      "ecmaVersion": 6,
      "sourceType": "module"
    },
    "plugins": [
      "flowtype"
    ],
    "settings": {
      "import/resolver": {
        "babel-root-import": {
          "rootPathPrefix": "~",
          "rootPathSuffix": "./src"
        }
      }
    },
    "env": {
      "browser": true
    }
  }